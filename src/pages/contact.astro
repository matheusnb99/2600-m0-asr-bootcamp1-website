---
// src/pages/contact.astro
import Button from "../components/ui/Button.astro";
import PageHeader from "../components/ui/PageHeader.astro";
import BaseLayout from "../layouts/BaseLayout.astro";
---

<BaseLayout title="Contactez PensePad">
    <section class="py-16 px-4 sm:px-6 lg:px-8 max-w-3xl mx-auto">
      <PageHeader
        title="Contactez l'Éveil"
        description="Vous avez une question sur votre dernier rêve ? Besoin d'un support technique sur une 'Évasion Zénithale' ? Notre équipe de support est peut-être en train de dormir, mais elle vous répondra... après une sieste profitable."
      />

      <div class="bg-[#1f1e3a] p-8 md:p-10 rounded-2xl shadow-2xl dreamy-shadow border border-indigo-700/50">
          <form class="space-y-6">
              <!-- Nom Complet -->
              <div>
                  <label for="name" class="block text-sm font-medium text-gray-300 mb-2">Nom Complet</label>
                  <input 
                      type="text" 
                      id="name" 
                      name="name" 
                      class="w-full px-4 py-3 rounded-lg bg-[#2a294b] border border-indigo-500/50 text-white focus:ring-indigo-500 focus:border-indigo-500 transition duration-150" 
                      placeholder="Votre nom dans la réalité" 
                      required 
                  />
              </div>

              <!-- Email -->
              <div>
                  <label for="email" class="block text-sm font-medium text-gray-300 mb-2">Adresse Email</label>
                  <input 
                      type="email" 
                      id="email" 
                      name="email" 
                      class="w-full px-4 py-3 rounded-lg bg-[#2a294b] border border-indigo-500/50 text-white focus:ring-indigo-500 focus:border-indigo-500 transition duration-150" 
                      placeholder="example@reveur.com" 
                      required 
                  />
              </div>

              <!-- Sujet -->
              <div>
                  <label for="subject" class="block text-sm font-medium text-gray-300 mb-2">Sujet du Message</label>
                  <select 
                      id="subject" 
                      name="subject" 
                      class="w-full px-4 py-3 rounded-lg bg-[#2a294b] border border-indigo-500/50 text-white focus:ring-indigo-500 focus:border-indigo-500 transition duration-150"
                  >
                      <option value="" disabled selected>Choisissez un Sujet Onirique</option>
                      <option value="support">Support Technique (Bug dans mon rêve)</option>
                      <option value="billing">Facturation & Paiements</option>
                      <option value="suggestion">Suggestion de Nouveau Rêve</option>
                      <option value="press">Presse & Partenariats</option>
                  </select>
              </div>

              <!-- Message -->
              <div>
                  <label for="message" class="block text-sm font-medium text-gray-300 mb-2">Votre Message</label>
                  <textarea 
                      id="message" 
                      name="message" 
                      rows="4" 
                      class="w-full px-4 py-3 rounded-lg bg-[#2a294b] border border-indigo-500/50 text-white focus:ring-indigo-500 focus:border-indigo-500 transition duration-150" 
                      placeholder="Décrivez votre requête, ou votre dernier rêve bizarre..." 
                      required
                  ></textarea>
              </div>

              <Button type="submit" style="primary" class="w-full">
                  Envoyer le Signal de l'Éveil
              </Button>
          </form>
      </div>
    </section>
</BaseLayout>
